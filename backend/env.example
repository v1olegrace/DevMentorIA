# DevMentor AI Backend - Environment Variables
# Copy this file to .env and configure your settings

# Server Configuration
PORT=3001
NODE_ENV=production
ALLOWED_ORIGINS=http://localhost:3000,https://devmentor-ai.com

# API Keys (configure with your actual keys)
OPENAI_API_KEY=sk-your-openai-key-here
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here
GOOGLE_API_KEY=your-google-api-key-here

# Security
JWT_SECRET=your-super-secret-jwt-key-here
ENCRYPTION_KEY=your-32-character-encryption-key

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=logs/api-proxy.log

# Database (if using)
DATABASE_URL=postgresql://user:password@localhost:5432/devmentor_ai

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# CORS
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# Request Limits
MAX_REQUEST_SIZE=10mb
MAX_CODE_LENGTH=50000
MAX_IMAGE_SIZE=10000000

# Cache
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# Health Check
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000


