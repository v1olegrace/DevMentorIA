{
  "manifest_version": 3,
  "name": "DevMentor AI - Enterprise Ready",
  "version": "1.0.0",
  "description": "AI-powered coding assistant with Chrome Built-in AI integration",
  
  "permissions": [
    "activeTab",
    "contextMenus",
    "storage",
    "scripting",
    "alarms"
  ],
  
  "host_permissions": [
    "https://github.com/*",
    "https://stackoverflow.com/*",
    "https://developer.mozilla.org/*",
    "https://gitlab.com/*",
    "https://bitbucket.org/*",
    "https://codepen.io/*",
    "https://jsfiddle.net/*",
    "https://codesandbox.io/*"
  ],
  
  "background": {
    "service_worker": "background/sw-loader.js",
    "type": "module"
  },
  
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'none'; connect-src 'self'; style-src 'self' 'unsafe-inline'; font-src 'self' data:; img-src 'self' data: https:;"
  },

  "minimum_chrome_version": "127",
  
  "commands": {
    "explain-code": {
      "suggested_key": {
        "default": "Ctrl+Shift+E",
        "mac": "Command+Shift+E"
      },
      "description": "Explain selected code with AI"
    },
    "debug-code": {
      "suggested_key": {
        "default": "Ctrl+Shift+B",
        "mac": "Command+Shift+B"
      },
      "description": "Debug selected code"
    },
    "document-code": {
      "suggested_key": {
        "default": "Ctrl+Shift+G",
        "mac": "Command+Shift+G"
      },
      "description": "Generate documentation"
    },
    "refactor-code": {
      "suggested_key": {
        "default": "Ctrl+Shift+R",
        "mac": "Command+Shift+R"
      },
      "description": "Refactor selected code"
    }
  },
  
  "web_accessible_resources": [
    {
      "resources": [
        "content/*"
      ],
      "matches": [
        "https://github.com/*",
        "https://stackoverflow.com/*",
        "https://developer.mozilla.org/*",
        "https://gitlab.com/*",
        "https://bitbucket.org/*",
        "https://codepen.io/*",
        "https://jsfiddle.net/*",
        "https://codesandbox.io/*"
      ]
    }
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "DevMentor AI"
  },

  "options_page": "options.html"
}