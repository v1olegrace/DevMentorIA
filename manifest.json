{
  "manifest_version": 3,
  "name": "DevMentor AI - Demo",
  "version": "1.0.0",
  "description": "AI-powered code explanation and debugging assistant - Hackathon Demo",
  
  "permissions": [
    "activeTab",
    "contextMenus",
    "storage"
  ],
  
  "host_permissions": [
    "https://github.com/*",
    "https://stackoverflow.com/*",
    "https://developer.mozilla.org/*"
  ],
  
  "background": {
    "service_worker": "background/service-worker.js"
  },
  
  "content_scripts": [
    {
      "matches": ["https://github.com/*", "https://stackoverflow.com/*"],
      "js": ["content/content-script.js"],
      "run_at": "document_end"
    }
  ],
  
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "DevMentor AI",
    "default_icon": {
      "16": "assets/icons/icon16.png",
      "32": "assets/icons/icon32.png",
      "48": "assets/icons/icon48.png",
      "128": "assets/icons/icon128.png"
    }
  },
  
  "icons": {
    "16": "assets/icons/icon16.png",
    "32": "assets/icons/icon32.png",
    "48": "assets/icons/icon48.png",
    "128": "assets/icons/icon128.png"
  },
  
  "commands": {
    "explain-code": {
      "suggested_key": {
        "default": "Ctrl+Shift+E",
        "mac": "Command+Shift+E"
      },
      "description": "Explain selected code with AI"
    },
    "debug-code": {
      "suggested_key": {
        "default": "Ctrl+Shift+D",
        "mac": "Command+Shift+D"
      },
      "description": "Debug selected code"
    },
    "document-code": {
      "suggested_key": {
        "default": "Ctrl+Shift+Doc",
        "mac": "Command+Shift+Doc"
      },
      "description": "Generate documentation for selected code"
    },
    "refactor-code": {
      "suggested_key": {
        "default": "Ctrl+Shift+R",
        "mac": "Command+Shift+R"
      },
      "description": "Refactor selected code"
    }
  },
  
  "web_accessible_resources": [
    {
      "resources": ["assets/styles/*", "assets/icons/*"],
      "matches": ["<all_urls>"]
    }
  ],
  
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  }
}