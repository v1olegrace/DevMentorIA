{
  "manifest_version": 3,
  "name": "DevMentor AI - Demo",
  "version": "1.0.0",
  "description": "AI-powered code explanation and debugging assistant - Hackathon Demo",
  
  "permissions": [
    "activeTab",
    "contextMenus",
    "storage",
    "scripting"
  ],
  
  "host_permissions": [
    "https://github.com/*",
    "https://stackoverflow.com/*",
    "https://developer.mozilla.org/*",
    "https://gitlab.com/*",
    "https://bitbucket.org/*",
    "https://codepen.io/*",
    "https://jsfiddle.net/*",
    "https://codesandbox.io/*"
  ],
  
  "background": {
    "service_worker": "background/service-worker.js"
  },
  
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "DevMentor AI",
    "default_icon": {
      "16": "assets/icons/icon16.svg",
      "32": "assets/icons/icon32.svg",
      "48": "assets/icons/icon48.svg",
      "128": "assets/icons/icon128.svg"
    }
  },
  
  "icons": {
    "16": "assets/icons/icon16.svg",
    "32": "assets/icons/icon32.svg",
    "48": "assets/icons/icon48.svg",
    "128": "assets/icons/icon128.svg"
  },
  
  "commands": {
    "explain-code": {
      "suggested_key": {
        "default": "Ctrl+Shift+E",
        "mac": "Command+Shift+E"
      },
      "description": "Explain selected code with AI"
    },
    "debug-code": {
      "suggested_key": {
        "default": "Ctrl+Shift+D",
        "mac": "Command+Shift+D"
      },
      "description": "Debug selected code"
    },
    "document-code": {
      "suggested_key": {
        "default": "Ctrl+Shift+O",
        "mac": "Command+Shift+O"
      },
      "description": "Generate documentation for selected code"
    },
    "refactor-code": {
      "suggested_key": {
        "default": "Ctrl+Shift+F",
        "mac": "Command+Shift+F"
      },
      "description": "Refactor selected code"
    }
  },
  
  "web_accessible_resources": [
    {
      "resources": ["assets/styles/*"],
      "matches": [
        "https://github.com/*",
        "https://stackoverflow.com/*",
        "https://developer.mozilla.org/*",
        "https://gitlab.com/*",
        "https://bitbucket.org/*",
        "https://codepen.io/*",
        "https://jsfiddle.net/*",
        "https://codesandbox.io/*"
      ]
    }
  ],
  
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self';"
  }
}