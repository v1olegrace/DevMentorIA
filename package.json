{
  "name": "devmentor-ai-chrome-extension",
  "version": "2.0.0",
  "description": "Enterprise-grade AI coding assistant powered by Chrome's Built-in AI. Complete privacy, offline-first, with Google best practices integration.",
  "author": "DevMentor AI Team <team@devmentor.ai>",
  "license": "MIT",
  "homepage": "https://devmentor.ai",
  "repository": {
    "type": "git",
    "url": "https://github.com/devmentor-ai/chrome-extension.git"
  },
  "bugs": {
    "url": "https://github.com/devmentor-ai/chrome-extension/issues"
  },
  "keywords": [
    "chrome-extension",
    "ai",
    "code-analysis",
    "developer-tools",
    "privacy",
    "multimodal",
    "google",
    "material-design",
    "enterprise",
    "offline-first"
  ],
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "dev": "npm run build:dev && npm run watch",
    "build": "npm run clean && npm run build:prod && npm run validate",
    "build:dev": "webpack --mode development --config webpack.config.js",
    "build:prod": "webpack --mode production --config webpack.config.js",
    "watch": "webpack --mode development --watch --config webpack.config.js",
    "clean": "rimraf dist/",
    "lint": "eslint . --ext .js,.ts --fix",
    "lint:check": "eslint . --ext .js,.ts",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:e2e": "playwright test",
    "validate": "npm run lint:check && npm run test && npm run build:prod",
    "package": "npm run build && zip -r devmentor-ai-v2.0.0.zip dist/",
    "release": "npm run build && npm run package && npm publish",
    "docs": "jsdoc -c jsdoc.conf.json",
    "analyze": "webpack-bundle-analyzer dist/stats.json",
    "security": "npm audit && snyk test",
    "format": "prettier --write \"**/*.{js,ts,json,md,css,html}\"",
    "format:check": "prettier --check \"**/*.{js,ts,json,md,css,html}\""
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "@playwright/test": "^1.40.0",
    "@types/chrome": "^0.0.251",
    "@types/jest": "^29.5.8",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "babel-loader": "^9.1.3",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "^6.8.1",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "html-webpack-plugin": "^5.5.3",
    "jest": "^29.7.0",
    "jsdoc": "^4.0.2",
    "mini-css-extract-plugin": "^2.7.6",
    "prettier": "^3.1.0",
    "rimraf": "^5.0.5",
    "sass": "^1.69.5",
    "sass-loader": "^13.3.2",
    "style-loader": "^3.3.3",
    "snyk": "^1.1248.0",
    "typescript": "^5.3.2",
    "webpack": "^5.89.0",
    "webpack-bundle-analyzer": "^4.10.1",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {},
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
    "collectCoverageFrom": [
      "**/*.{js,ts}",
      "!**/node_modules/**",
      "!**/dist/**",
      "!**/tests/**",
      "!**/*.config.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "@typescript-eslint/recommended",
      "prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "plugins": ["@typescript-eslint", "prettier"],
    "rules": {
      "prettier/prettier": "error",
      "@typescript-eslint/no-unused-vars": "error",
      "@typescript-eslint/explicit-function-return-type": "warn",
      "no-console": "warn"
    },
    "env": {
      "browser": true,
      "es2021": true,
      "webextensions": true
    }
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 100,
    "tabWidth": 2,
    "useTabs": false
  },
  "browserslist": [
    "Chrome >= 127"
  ],
  "chromeExtension": {
    "manifest": {
      "version": "2.0.0",
      "name": "DevMentor AI - Enterprise Code Assistant",
      "description": "Enterprise-grade AI coding assistant powered by Chrome's Built-in AI. Complete privacy, offline-first, with Google best practices integration.",
      "permissions": [
        "activeTab",
        "contextMenus",
        "storage",
        "scripting",
        "tabs"
      ],
      "host_permissions": [
        "https://github.com/*",
        "https://gitlab.com/*",
        "https://bitbucket.org/*",
        "https://codepen.io/*",
        "https://jsfiddle.net/*",
        "https://codesandbox.io/*",
        "https://replit.com/*",
        "https://stackoverflow.com/*",
        "https://stackexchange.com/*",
        "https://leetcode.com/*",
        "https://hackerrank.com/*",
        "https://developer.mozilla.org/*",
        "https://docs.google.com/*",
        "https://colab.research.google.com/*",
        "http://localhost/*",
        "https://localhost/*"
      ],
      "minimum_chrome_version": "127"
    }
  },
  "snyk": true,
  "funding": {
    "type": "opencollective",
    "url": "https://opencollective.com/devmentor-ai"
  },
  "files": [
    "dist/",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "release": {
    "branches": [
      "main",
      {
        "name": "beta",
        "prerelease": true
      }
    ]
  }
}

